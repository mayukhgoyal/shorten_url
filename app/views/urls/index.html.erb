<div class="container">
	<div class="row">
		<div class="col-md-8">
			 <%= form_for @url ,html: { :class=>"form-horizontal"} do |f| %>
			 	<% if @url.errors.any? %>
			    <div id="error_explanation">
			      <ul>
			      <% @url.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>
			 	<div class="form-group">
			 		<%=f.label :original_url,'Original Url'%>
			 		<%=f.text_field :original_url ,:class=>"form-control",:placeholder=>"Enter the URL you want to shorten"%>
			 	</div>
			 	<div class="form-group">
			 		<%=f.submit "Submit", :class=>"btn btn-primary"%>
			 	</div>
			 <%end%>
		</div>
	</div>
</div>